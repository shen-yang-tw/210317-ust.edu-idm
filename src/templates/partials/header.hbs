						</div> --}}
					</div>
				</div>
			</div>
			<!-- /logo & sideLinks -->
		</nav>
	</div>
	<div class="min_height-100 min_height-200@m m:tw-mb-6 uk-flex uk-flex-center uk-flex-middle uk-background-cover" data-src="{{bannerSrc}}" uk-img>
		<h2 class="tw-w-full tw-relative tw-text-center tw-p-2 tw-m-0 tw-text-xl tw-font-bold">
			<div class="tw-opacity-70 tw-text-black tw-bg-gradient-to-r tw-from-transparent tw-via-white tw-to-transparent uk-position-cover"></div>
